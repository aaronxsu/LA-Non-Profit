<%- model_class = Rating -%>
<div class="page-header">
  <h1 style="padding-left:20px;"><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Organization Name:</strong></dt>
  <dd><%= @rating.organization.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_name) %>:</strong></dt>
  <dd><%= @rating.user_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score) %>:</strong></dt>
  <dd><%= @rating.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @rating.comment %></dd>
</dl>
<div style="padding: 20px;">
<%= link_to t('.back', :default => t("helpers.links.back")),
              organization_path(@rating.organization), :class => 'btn-back'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rating_path(@rating), :class => 'btn-edit' %>
</div>
