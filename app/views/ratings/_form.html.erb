<%= form_for [@organization, @rating], :html => { :class => "form-horizontal rating" } do |f| %>

<% if @rating.errors.any? %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @rating.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="form-group" style="margin: 30px 0 30px 0">
  <h4 style="margin:20px; padding: 20px;"><b><%= @rating.organization.name%></b></h4>
  <%= f.label :user_name, :class => 'control-label col-lg-2' %>
  <div class="col-lg-3">
    <%= f.text_field :user_name, :class => 'form-control' %>
  </div>
  <%=f.error_span(:user_name) %>
</div>
<div class="form-group" style="margin: 30px 0 30px 0">
  <%= f.label :score, :class => 'control-label col-lg-2' %>
  <div class="col-lg-5">
    <%= f.text_field :score, :class => 'form-control' %>
  </div>
  <%=f.error_span(:score) %>
</div>
<div class="form-group" style="margin: 30px 0 30px 0">
  <%= f.label :comment, :class => 'control-label col-lg-2' %>
  <div class="col-lg-6">
    <%= f.text_field :comment, :class => 'form-control' %>
  </div>
  <%=f.error_span(:comment) %>
</div>

<div class="form-group">
  <div class="col-lg-offset-2 col-lg-10">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              organization_path(@rating.organization), :class => 'btn-cancel' %>
    <%= f.submit nil, :class => 'btn-submit' %>
  </div>
</div>

<% end %>
